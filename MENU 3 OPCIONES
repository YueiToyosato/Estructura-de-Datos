#include <iostream>
using namespace std;
float suma(float a, float b);
float resta(float a, float b);
float mult(float a, float b);
void menu()
{
    int op=1;
    float a; float b;
    do
    {
       cout<<"***MENU***"<<endl;
       cout<<"1. SUMA"<<endl;
       cout<<"2. RESTA"<<endl;
       cout<<"3. MULTIPLICACION"<<endl;
       cout<<"0. SALIR"<<endl;
       cout<<"Introduzca su opcion"<<endl;
       cin>>op;
       switch (op)
       {
           case 1: 
           system ("clear");
           cout<<"Introducir el 1er numero"<<endl;
           cin>>a;
           cout<<"Introducir el 2do numero"<<endl;
           cin>>b;
           cout<<"La respuesta es: "<<suma(a,b)<<endl;
           break;
           case 2:
           system ("clear");
           cout<<"Introducir el 1er numero"<<endl;
           cin>>a;
           cout<<"Introducir el 2do numero"<<endl;
           cin>>b;
           cout<<"La respuesta es: "<<resta(a,b)<<endl;
           break;
           case 3:
           system ("clear");
           cout<<"Introducir el 1er numero"<<endl;
           cin>>a;
           cout<<"Introducir el 2do numero"<<endl;
           cin>>b;
           cout<<"La respuesta es: "<<mult(a,b)<<endl;
           break;
           case 0:
           system ("clear");
           cout<<"FIN"<<endl;
           break;
           default:
           system ("clear");
           cout<<"Ingrese una opcion valida"<<endl;
           break;
       }  
    }while(op!=0);
}

int main()
{
    menu();
    return 0;
}

float suma(float a, float b)
{
    float s;
    s=a+b;
    return s;
}
float resta(float a, float b)
{
    float r;
    r=a-b;
    return r;
}
float mult(float a, float b)
{
    float m;
    m=a*b;
    return m;
}
